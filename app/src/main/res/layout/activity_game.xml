<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omri.battleShip.GameActivity">


    <GridLayout
        android:id="@+id/myGridLayout"
        android:layout_width="@dimen/boardDimen"
        android:layout_height="@dimen/boardDimen"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp" />

    <GridLayout
        android:id="@+id/enemyGridLayout"
        android:layout_width="@dimen/boardDimen"
        android:layout_height="@dimen/boardDimen"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="20dp" />

    <ImageView
        android:id="@+id/myTurnArrow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/myGridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        app:srcCompat="@drawable/right_arrow"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/enemyTurnArrow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/myGridLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        app:srcCompat="@drawable/left_arrow"
        android:visibility="invisible"/>

</RelativeLayout>
