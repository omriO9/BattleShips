<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context="com.example.omri.batlleship.MainActivity">

    <Button
        android:id="@+id/play_button"
        android:layout_width="@dimen/play_button_width"
        android:layout_height="@dimen/play_button_height"
        android:layout_centerInParent="true"
        android:onClick="arrangeBattleFieldActivity"
        android:text="@string/play_button"
        android:textSize="@dimen/play_button_textsize" />

    <Button
        android:id="@+id/rules_button"
        android:layout_width="@dimen/rules_button_width"
        android:layout_height="@dimen/rules_button_height"
        android:layout_below="@+id/play_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:onClick="showRulesActivity"
        android:text="@string/rules_button"
        android:textSize="@dimen/rules_button_textsize" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="12dp"
        android:checked="true"
        android:text="Sound"></Switch>


</RelativeLayout>
